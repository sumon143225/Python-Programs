
class Solution:
    def addToArrayForm(self, num: List[int], k: int) -> List[int]:
        result = []
        carry = k
        
        # Process from rightmost digit
        for i in range(len(num) - 1, -1, -1):
            carry += num[i]
            result.append(carry % 10)
            carry //= 10
        
        # Handle remaining carry
        while carry > 0:
            result.append(carry % 10)
            carry //= 10
        
        # Reverse to get correct order
        return result[::-1]
